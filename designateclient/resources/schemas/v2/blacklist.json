{
    "id": "blacklist",

    "$schema": "http://json-schema.org/draft-03/hyper-schema",

    "title": "blacklist",
    "description": "Blacklist",

    "properties": {
        "blacklist": {
            "type": "object",
            "properties":{
                "id": {
                    "type": "string",
                    "description": "Blacklisted Zone Identifier",
                    "pattern": "^([0-9a-fA-F]){8}-([0-9a-fA-F]){4}-([0-9a-fA-F]){4}-([0-9a-fA-F]){4}-([0-9a-fA-F]){12}$",
                    "readonly": true
                },
                "pattern": {
                    "type": "string",
                    "description": "Regex for blacklisted zone name",
                    "format": "regex",
                    "maxLength": 255,
                    "required": true
                },
                "created_at": {
                    "type": "string",
                    "description": "Date and time of blacklisted zone creation",
                    "format": "date-time",
                    "readonly": true
                },
                "description": {
                    "type": ["string", "null"],
                    "description": "Description for the blacklisted zone",
                    "maxLength": 160
                },
                "updated_at": {
                    "type": ["string", "null"],
                    "description": "Date and time of last blacklisted zone update",
                    "format": "date-time",
                    "readonly": true
                },
                "links": {
                    "type": "object",
                    "additionalProperties": false,

                    "properties": {
                        "self": {
                            "type": "string",
                            "format": "url"
                        }
                    }
                }
            }
        }
    },
    "links": [{
        "rel": "self",
        "href": "/blacklists/{id}"
    }, {
        "rel": "collection",
        "href": "/blacklists"
    }]
}
